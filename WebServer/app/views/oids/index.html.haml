.page-header
  %h1 Список Oids
.list-form
  - @oids.each do |oid|
    .list-group-item
      .pull-left{style: "position: inline-block;"}
        %i Наименование:
        %b #{oid.translate} 
        %i Oid: 
        %b #{oid.oid}
      .pull-right
        =link_to edit_oid_path(oid), class: 'btn btn-primary btn-sm' do
          =fa_icon 'edit'
        =link_to oid, method: :delete, data: {confirm: "Вы уверены?"}, class: 'btn btn-danger btn-sm' do
          =fa_icon 'trash-o'

      .clearfix
= link_to 'New Oid', new_oid_path
