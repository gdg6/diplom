= form_for @log do |f|
  - if @log.errors.any?
    #error_explanation
      %h2= "#{pluralize(@log.errors.count, "error")} prohibited this log from being saved:"
      %ul
        - @log.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :l_type
    = f.number_field :l_type
  .field
    = f.label :context
    = f.text_area :context
  .actions
    = f.submit 'Save'
