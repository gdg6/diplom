.page-header
  %h1 Результат зарпоса
.div
  %h2 Сгенерированный запрос: 
  "#{@snmp_request}"
.div
  %h2 Результат: 
  "#{@result}"

.clearfix
.pull-left{style: "margin-top: 5%;"}
  =link_to "/devices/#{@device_id}", style: "width: 90px;", class: 'btn btn-success btn-sm', title: "К устройству" do
    =fa_icon 'step-backward'
  =link_to "/snmpget_request/?device_id=#{@device_id}", style: "width: 90px;", class: 'btn btn-info btn-sm', title: "Отправка разового запроса" do
    =fa_icon 'filter'

