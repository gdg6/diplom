<h1>Listing devices</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Room</th>
      <th>Mac</th>
      <th>Serial number</th>
      <th>Model</th>
      <th>Port</th>
      <th>Mib</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.name %></td>
        <td><%= device.description %></td>
        <td><%= device.room %></td>
        <td><%= device.mac %></td>
        <td><%= device.serial_number %></td>
        <td><%= device.model %></td>
        <td><%= device.port %></td>
        <td><%= device.mib_id %></td>
        <td><%= link_to 'Show', device %></td>
        <td><%= link_to 'Edit', edit_device_path(device) %></td>
        <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

